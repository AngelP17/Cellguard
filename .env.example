# Go classifier base URL
CLASSIFIER_URL=http://localhost:8081
CLASSIFIER_STUB=true

# Redis for ActionCable + Sidekiq
REDIS_URL=redis://localhost:6379/1

# Demo endpoints guard (recommended true in dev/demo)
ALLOW_DEMO_ENDPOINTS=true

# Optional token auth if you disable ALLOW_DEMO_ENDPOINTS
CELLGUARD_TOKEN=change-me

# Chaos config (docker mode)
REDIS_CONTAINER=sidekiq-cellguard-redis-1
DOCKER_NETWORK=infrastructure_internal_grid

# Chaos config (tc mode)
TC_IFACE=eth0

# ============================================================================
# AUTONOMOUS AGENT CONFIGURATION
# ============================================================================

# Master switch for all agents
CELLGUARD_AGENTS_ENABLED=true

# How often scheduled agents run (seconds)
CELLGUARD_AGENT_EXECUTION_INTERVAL_SECONDS=60

# ----------------------------------------------------------------------------
# BudgetGuardAgent - Predictive budget monitoring
# ----------------------------------------------------------------------------
CELLGUARD_BUDGET_GUARD_ENABLED=true
CELLGUARD_BUDGET_GUARD_EXHAUSTION_THRESHOLD_HOURS=24
CELLGUARD_BUDGET_GUARD_CRITICAL_BURN_RATE=2.0
CELLGUARD_BUDGET_GUARD_CRITICAL_REMAINING=0.3
# WARNING: Only enable auto-chaos in safe environments
CELLGUARD_BUDGET_GUARD_AUTO_CHAOS=false

# ----------------------------------------------------------------------------
# ChaosOrchestratorAgent - Intelligent chaos scheduling
# ----------------------------------------------------------------------------
# OPT-IN ONLY: Only enable if you understand the blast radius
CELLGUARD_CHAOS_ORCHESTRATOR_ENABLED=false
CELLGUARD_CHAOS_MIN_INTERVAL_HOURS=24
CELLGUARD_CHAOS_MAX_BLAST_RADIUS=shard-default
CELLGUARD_CHAOS_AUTO_HEAL_SECONDS=30

# ----------------------------------------------------------------------------
# IncidentResponseAgent - Auto-analysis and runbook suggestions
# ----------------------------------------------------------------------------
CELLGUARD_INCIDENT_RESPONSE_ENABLED=true
CELLGUARD_INCIDENT_AUTO_RUNBOOK_SUGGESTIONS=true

# ----------------------------------------------------------------------------
# HealingAgent - Automatic recovery
# ----------------------------------------------------------------------------
CELLGUARD_HEALING_AGENT_ENABLED=true
# WARNING: Auto-recovery can mask issues. Enable only with monitoring.
CELLGUARD_HEALING_AUTO_RECOVER=false
CELLGUARD_HEALING_MAX_RETRY_ATTEMPTS=3

<div class="min-h-screen cg-shell text-neutral-100">
  <div class="mx-auto max-w-6xl px-6 py-10">
    <header class="cg-shell-header mb-8">
      <div>
        <div class="cg-shell-eyebrow text-xs tracking-widest text-neutral-500">CELLGUARD CONTROL PLANE</div>
        <h1 class="mt-2 text-3xl font-semibold"><%= @title %></h1>
        <% if @subtitle.present? %>
          <div class="mt-2 text-sm text-neutral-400"><%= @subtitle %></div>
        <% end %>
      </div>

      <nav class="cg-top-nav" aria-label="Primary">
        <% nav_items.each do |item| %>
          <a
            href="<%= item[:href] %>"
            class="<%= nav_link_classes(item[:active]) %>"
            <% if item[:active] %>aria-current="page"<% end %>
          >
            <%= heroicon(item[:icon], classes: "cg-top-nav__icon") %>
            <span><%= item[:label] %></span>
          </a>
        <% end %>
      </nav>
    </header>

    <%= content %>

    <div class="mt-10 border-t border-neutral-900 pt-6 text-xs text-neutral-600">
      Policy-as-code • Auditability • Closed-loop reliability
    </div>
  </div>
</div>

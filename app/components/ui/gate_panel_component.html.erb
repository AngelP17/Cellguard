<div class="rounded-2xl border px-6 py-6 <%= status_classes %>">
  <div class="flex items-start justify-between gap-6">
    <div>
      <div class="text-xs tracking-widest text-neutral-300">RELEASE GATE</div>
      <div class="mt-2 text-3xl font-semibold"><%= status_label %></div>

      <% if @gate_open %>
        <div class="mt-2 text-sm text-neutral-200">SLO compliant. Deployments permitted.</div>
      <% else %>
        <div class="mt-2 text-sm text-neutral-200"><%= @reason || "Error budget exhausted." %></div>
        <% if @violation_started_at.present? %>
          <div class="mt-1 text-xs text-neutral-400">Violation since <%= @violation_started_at %></div>
        <% end %>
      <% end %>
    </div>

    <div class="text-right">
      <div class="text-xs text-neutral-400">Budget remaining</div>
      <div class="mt-1 text-2xl font-semibold"><%= (@budget_remaining.to_f * 100).round(2) %>%</div>
      <div class="mt-3 text-xs text-neutral-400">Burn rate</div>
      <div class="mt-1 text-sm font-medium"><%= @burn_rate %>x</div>
    </div>
  </div>
</div>
